@page
@model www.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Bem-vindo ao Sistema</h1>

    <h2 class="mb-3">Módulos</h2>
    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-user-injured fa-3x mb-3"></i>
                <h3>Paciente</h3>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-user-tie fa-3x mb-3"></i>
                <h3>Funcionário</h3>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-user-md fa-3x mb-3"></i>
                <h3>Médico</h3>
            </div>
        </div>
    </div>

    <h2 class="mb-3">Relatórios</h2>
    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-file-alt fa-3x mb-3"></i>
                <h3>Relatórios</h3>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-pills fa-3x mb-3"></i>
                <h3>Dispensação</h3>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card grid-item text-center py-5">
                <i class="fas fa-chart-line fa-3x mb-3"></i>
                <h3>Estatísticas</h3>
            </div>
        </div>
    </div>
</div>

<style>
    .grid-item {
        transition: transform 0.3s, background-color 0.3s;
        cursor: pointer;
    }

        .grid-item:hover {
            transform: scale(1.05);
            background-color: #d1d1d1;
        }
</style>
