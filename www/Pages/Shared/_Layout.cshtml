<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">


    <style>
        body {
            background: #eee;
        }

        .logo {
            width: 200px; /* Defina a largura desejada */
            height: auto; /* Mantém a proporção da imagem */
        }

        #side_nav {
            background: #1f2937;
            min-width: 250px;
            max-width: 250px;
            transition: all 0.3s;
        }

        .content {
            min-height: 100vh;
            width: 100%;
        }

        hr.h-color {
            background: #eee;
        }

        .sidebar li:hover {
            background: #eee;
            border-radius: 8px;
        }

        .sidebar li:hover a,
        .sidebar li:hover a:hover {
            color: #1f2937;
        }

        .sidebar li.active {
            background: #eee;
            border-radius: 8px;
        }

        .sidebar li.active a,
        .sidebar li.active a:hover {
            color: #1f2937;
        }

        .sidebar li a {
            color: #fff;
        }

        @@media (max-width: 767px) {
            #side_nav {
                margin-left: -250px;
                position: absolute;
                min-height: 100vh;
                z-index: 1;
            }

            #side_nav.active {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="main-container d-flex">
        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-3 pb-4 d-flex justify-content-between">
                <a class="navbar-brand" href="/Index">
                    <img src="/img/logo-sgfme.png" alt="Logo SGFME" class="logo">
                </a>
                <button class="btn d-md-none d-block close-btn px-1 py-0 text-white">
                    <i class="fas fa-stream"></i>
                </button>
            </div>

            <ul class="list-unstyled px-2">
                <li class="nav-item @(Model.ActivePage == "Index" ? "active" : "")">
                    <a href="/Index" class="text-decoration-none px-3 py-2 d-block">
                        <i class="fas fa-home"></i> Início
                    </a>
                </li>
                <li class="nav-item @(Model.ActivePage == "Paciente" ? "active" : "")">
                    <a href="/Paciente" class="text-decoration-none px-3 py-2 d-block">
                        <i class="fas fa-user-injured"></i> Paciente
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#submenu1" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-hospital"></i> Estabelecimento de Saúde</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 1</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 2</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#submenu2" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-md"></i> Funcionário</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 1</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 2</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#submenu3" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-tie"></i> Representante</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 1</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 2</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#submenu4" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-notes-medical"></i> CID</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu4" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 1</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 2</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#submenu5" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-pills"></i> Medicamento</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu5" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 1</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none px-3 py-2 d-block">Item 2</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <hr class="h-color mx-2">

            <ul class="list-unstyled px-2">
                <li class="nav-item">
                    <a href="#" class="text-decoration-none px-3 py-2 d-block">
                        <i class="fas fa-bars"></i> Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="text-decoration-none px-3 py-2 d-block">
                        <i class="fas fa-bell"></i> Notifications
                    </a>
                </li>
            </ul>
        </div>
        <div class="content">
            <nav class="navbar navbar-expand-md" style="background:#1f2937;">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between d-md-none d-block">
                        <button class="btn px-1 py-0 open-btn me-2"><i class="fas fa-stream"></i></button>
                        <a class="navbar-brand fs-4" href="#"><span class="bg-dark rounded px-2 py-0 text-white">CL</span></a>
                    </div>
                    <button class="navbar-toggler p-0 border-0" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Profile</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="dashboard-content px-3 pt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Handle active class for menu items
            $(".sidebar ul li a").on('click', function () {
                $(".sidebar ul li.active").removeClass('active');
                $(this).parent().addClass('active');
            });

            // Handle sidebar toggle for small screens
            $('.open-btn').on('click', function () {
                $('.sidebar').addClass('active');
            });

            $('.close-btn').on('click', function () {
                $('.sidebar').removeClass('active');
            });
        });

    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
