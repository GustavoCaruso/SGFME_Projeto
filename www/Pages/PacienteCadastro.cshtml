@page
@model www.Pages.PacienteCadastroModel
@{
    ViewData["Title"] = "Cadastro de Paciente";
}

<style>
    .section {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
    }

    .section-title {
        margin-bottom: 20px;
    }

    .btn-margin {
        margin-top: 15px;
        margin-bottom: 15px;
    }
</style>

<form id="pacienteForm" class="row g-3">

    <div class="row align-items-center mb-3">
        <div class="col-auto">
            <i class="fas fa-user fa-3x"></i>
        </div>
        <div class="col">
            <h1>Cadastro de Paciente</h1>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-dark"
                    onclick="location.href='/PacienteGerenciamento'">
                Gerenciamento de Pacientes
            </button>
        </div>
    </div>
    <hr />

    <div class="section">
        <h2 class="section-title">Informações Pessoais</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="txtid" class="form-label">Código</label>
                <input type="text" class="form-control" id="txtid" value="0" placeholder="Código" disabled>
            </div>

            <div class="col-md-2">
                <label for="txtdataCadastro" class="form-label">Data de Cadastro</label>
                <input type="date" class="form-control" id="txtdataCadastro" disabled>
            </div>

            <div class="col-md-2">
                <label for="selectStatus" class="form-label">Status</label>
                <select class="form-control" id="selectStatus" required>
                    <option value="0">Selecione um status</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um status.
                </div>
            </div>

            <div class="col-md-6">
                <label for="txtnomeCompleto" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="txtnomeCompleto" placeholder="Nome Completo" maxlength="100" required>
                <div class="invalid-feedback">
                    Por favor, insira o nome completo (máximo 100 caracteres).
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="txtdataNascimento" class="form-label">Data de Nascimento</label>
                <input type="date" class="form-control" id="txtdataNascimento" required>
                <div class="invalid-feedback">
                    Por favor, insira a data de nascimento.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtpeso" class="form-label">Peso</label>
                <input type="text" class="form-control" id="txtpeso" placeholder="Peso" required>
                <div class="invalid-feedback">
                    Por favor, insira o peso.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtaltura" class="form-label">Altura</label>
                <input type="text" class="form-control" id="txtaltura" placeholder="Altura" required>
                <div class="invalid-feedback">
                    Por favor, insira a altura.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectSexo" class="form-label">Sexo</label>
                <select class="form-control" id="selectSexo" required>
                    <option value="0">Selecione um sexo</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um sexo.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectCorRaca" class="form-label">Cor/Raça</label>
                <select class="form-control" id="selectCorRaca" required>
                    <option value="0">Selecione uma cor/raça</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione uma cor/raça.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectEstadoCivil" class="form-label">Estado Civil</label>
                <select class="form-control" id="selectEstadoCivil" required>
                    <option value="0">Selecione um estado civil</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um estado civil.
                </div>
            </div>

            <div class="col-md-4">
                <label for="txtnomeConjuge" class="form-label">Nome do Cônjuge</label>
                <input type="text" class="form-control" id="txtnomeConjuge" placeholder="Nome do Cônjuge" maxlength="100">
                <div class="invalid-feedback">
                    Por favor, insira o nome do cônjuge (máximo 100 caracteres).
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="selectNaturalidadeUf" class="form-label">Naturalidade - UF</label>
                <select class="form-control" id="selectNaturalidadeUf" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um estado.
                </div>
            </div>

            <div class="col-md-4">
                <label for="selectNaturalidadeCidade" class="form-label">Naturalidade - Cidade</label>
                <select class="form-control" id="selectNaturalidadeCidade" required>
                    <option value="0">Selecione um município</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um município.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtrgNumero" class="form-label">RG Número</label>
                <input type="text" class="form-control" id="txtrgNumero" placeholder="RG Número" maxlength="9" required>
                <div class="invalid-feedback">
                    Por favor, insira o número do RG (máximo 9 caracteres).
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtrgDataEmissao" class="form-label">RG Data de Emissão</label>
                <input type="date" class="form-control" id="txtrgDataEmissao" required>
                <div class="invalid-feedback">
                    Por favor, insira a data de emissão do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtrgOrgaoExpedidor" class="form-label">RG Órgão Expedidor</label>
                <input type="text" class="form-control" id="txtrgOrgaoExpedidor" placeholder="RG Órgão Expedidor" required>
                <div class="invalid-feedback">
                    Por favor, insira o órgão expedidor do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectRgUfEmissao" class="form-label">RG UF de Emissão</label>
                <select class="form-control" id="selectRgUfEmissao" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione a UF de emissão do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtcnsNumero" class="form-label">CNS Número</label>
                <input type="text" class="form-control numeric-only" id="txtcnsNumero" placeholder="CNS Número" maxlength="15" required>
                <div class="invalid-feedback">
                    Por favor, insira o número do CNS (15 caracteres).
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtcpfNumero" class="form-label">CPF Número</label>
                <input type="text" class="form-control numeric-only" id="txtcpfNumero" placeholder="CPF Número" maxlength="11" required>
                <div class="invalid-feedback">
                    Por favor, insira o número do CPF (11 caracteres).
                </div>
            </div>

            <div class="col-md-6">
                <label for="txtnomeMae" class="form-label">Nome da Mãe</label>
                <input type="text" class="form-control" id="txtnomeMae" placeholder="Nome da Mãe" maxlength="100" required>
                <div class="invalid-feedback">
                    Por favor, insira o nome da mãe (máximo 100 caracteres).
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2 class="section-title">Contatos</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoContato">Tipo de Contato</label>
                <select class="form-control" id="selectTipoContato" required>
                    <option value="0">Selecione um tipo de contato</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um tipo de contato.
                </div>
            </div>

            <div class="col-md-3">
                <label for="txtValorContato">Valor do Contato</label>
                <input type="text" class="form-control" id="txtValorContato" placeholder="Valor do Contato" required>
                <div class="invalid-feedback">
                    Por favor, insira o valor do contato.
                </div>
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarContato">Adicionar Contato</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="contatoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacao" class="text-danger"></div>
    </div>

    <div class="section">
        <h2 class="section-title">Endereços</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoEndereco">Tipo de Endereço</label>
                <select class="form-control" id="selectTipoEndereco" required>
                    <option value="0">Selecione um tipo de endereço</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um tipo de endereço.
                </div>
            </div>

            <div class="col-md-6">
                <label for="txtLogradouro">Logradouro</label>
                <input type="text" class="form-control" id="txtLogradouro" placeholder="Logradouro" maxlength="100" required>
                <div class="invalid-feedback">
                    Por favor, insira o logradouro (máximo 100 caracteres).
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtNumero">Número</label>
                <input type="text" class="form-control" id="txtNumero" placeholder="Número" maxlength="10" required>
                <div class="invalid-feedback">
                    Por favor, insira o número (máximo 10 caracteres alfanuméricos).
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtComplemento">Complemento</label>
                <input type="text" class="form-control" id="txtComplemento" placeholder="Complemento" maxlength="30" pattern="[A-Za-z ]*">
                <div class="invalid-feedback">
                    Por favor, insira o complemento (somente letras, máximo 30 caracteres).
                </div>
            </div>

            <div class="col-md-4">
                <label for="txtBairro">Bairro</label>
                <input type="text" class="form-control" id="txtBairro" placeholder="Bairro" maxlength="70" required>
                <div class="invalid-feedback">
                    Por favor, insira o bairro (máximo 70 caracteres).
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectEstado">Estado</label>
                <select class="form-control" id="selectEstado" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um estado.
                </div>
            </div>

            <div class="col-md-6">
                <label for="selectMunicipio">Município</label>
                <select class="form-control" id="selectMunicipio" required>
                    <option value="0">Selecione um município</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, selecione um município.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtCep">CEP</label>
                <input type="text" class="form-control numeric-only" id="txtCep" placeholder="CEP" maxlength="8" required>
                <div class="invalid-feedback">
                    Por favor, insira o CEP (8 caracteres).
                </div>
            </div>

            <div class="col-md-6">
                <label for="txtPontoReferencia">Ponto de Referência</label>
                <input type="text" class="form-control" id="txtPontoReferencia" placeholder="Ponto de Referência" maxlength="100">
                <div class="invalid-feedback">
                    Por favor, insira o ponto de referência (máximo 100 caracteres).
                </div>
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarEndereco">Adicionar Endereço</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="enderecoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Número</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">UF</th>
                        <th scope="col">CEP</th>
                        <th scope="col">Ponto de Referência</th>
                        <th scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacaoEndereco" class="text-danger"></div>
    </div>

    <div class="col-12">
        <button type="button" class="btn btn-primary" onclick="location.href='/PacienteGerenciamento'">Voltar</button>
        <button type="button" id="btnsalvar" class="btn btn-primary">Salvar</button>
        <button type="button" id="btnlimpar" class="btn btn-primary">Limpar</button>
    </div>

</form>

@section Scripts {
    <script src="~/js/Paciente.js"></script>
}
