@page
@model www.Pages.CidGerenciamentoModel
@{
    ViewData["Title"] = "Gerenciamento de CIDs";
    
}

<style>
    .top-right-button {
        float: right;
    }

    .table-container {
        margin-top: 20px;
    }

    .title-icon {
        display: flex;
        align-items: center;
    }

        .title-icon i {
            margin-right: 10px;
        }
</style>

<div class="row">
    <div class="col title-icon">
        <i class="fas fa-diagnoses fa-3x"></i>
        <h1>Gerenciamento de CIDs</h1>
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-success top-right-button" onclick="location.href='/CidCadastro'">
            Cadastrar Novo CID
        </button>
    </div>
</div>
<hr />
<div class="table-container">
    <div class="table-responsive">
        <table id="tabelaCid" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Código CID</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Status</th>
                    <th scope="col">Versão CID</th>
                    <th scope="col">Visualizar</th>
                    <th scope="col">Excluir</th>
                </tr>
            </thead>
            <tbody id="tabela">
            </tbody>
        </table>
    </div>
</div>

<table style="display:none">
    <tr id="linhaExemplo">
        <th scope="row" class="codigo"></th>
        <td class="codigoCid"></td>
        <td class="descricao"></td>
        <td class="status"></td>
        <td class="versaoCid"></td>
        <td><a href="#" class="alterar btn btn-info btn-sm">Visualizar</a></td>
        <td><a href="#" class="excluir btn btn-danger btn-sm">Excluir</a></td>
    </tr>
</table>
<div class="mt-3">
    <button type="button" class="btn btn-primary" onclick="location.href='/index'">Voltar</button>
</div>

@section Scripts
{
    <script src="~/js/Cid.js"></script>
}
