@page
@model www.Pages.MedicamentoGerenciamentoModel
@{
    ViewData["Title"] = "Gerenciamento de Medicamentos";
}

<style>
    .top-right-button {
        float: right;
    }

    .table-container {
        margin-top: 20px;
    }

    .title-icon {
        display: flex;
        align-items: center;
    }

        .title-icon i {
            margin-right: 10px;
        }

    .table-responsive {
        overflow-x: auto;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: left; /* Alinhamento à esquerda */
    }

    .table td {
        word-wrap: break-word; /* Permite quebra de linha para preencher o espaço */
    }

    .codigo, .status {
        max-width: 100px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .nome {
        max-width: 300px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    @@media (max-width: 768px) {
        .nome, .status {
            max-width: 150px;
        }

        .top-right-button {
            float: none;
            width: 100%;
            margin-top: 10px;
        }

        .title-icon h1 {
            font-size: 1.5rem;
        }
    }
</style>


<div class="row">
    <div class="col title-icon">
        <i class="fas fa-pills fa-3x"></i>
        <h1>Gerenciamento de Medicamentos</h1>
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-success top-right-button" onclick="location.href='/MedicamentoCadastro'">
            Cadastrar Novo Medicamento
        </button>
    </div>
</div>
<hr />
<div class="table-container">
    <div class="table-responsive">
        <table id="tabelaMedicamento" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Status</th>
                    <th scope="col">Visualizar</th>
                </tr>
            </thead>
            <tbody id="tabela">
            </tbody>
        </table>
    </div>
</div>

<table style="display:none">
    <tr id="linhaExemplo">
        <th scope="row" class="codigo"></th>
        <td class="nome text-truncate"></td>
        <td class="status">
            <select class="form-select alterar-status">
                <!-- As opções de status serão carregadas dinamicamente -->
            </select>
        </td>
        <td><a href="#" class="alterar btn btn-info btn-sm">Visualizar</a></td>
    </tr>
</table>

<div class="mt-3">
    <button type="button" class="btn btn-primary" onclick="location.href='/index'">Voltar</button>
</div>

@section Scripts
{
    <script src="~/js/Medicamento.js"></script>
}
