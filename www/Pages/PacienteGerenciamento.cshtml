@page
@model www.Pages.PacienteGerenciamentoModel
@{
    ViewData["Title"] = "Gerenciamento de Pacientes";
}

<style>
    .top-right-button {
        float: right;
    }

    .table-container {
        margin-top: 20px;
    }

    .title-icon {
        display: flex;
        align-items: center;
    }

        .title-icon i {
            margin-right: 10px;
        }
</style>

<div class="row">
    <div class="col title-icon">
        <i class="fas fa-user-injured fa-3x"></i>
        <h1>Gerenciamento de Pacientes</h1>
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-success top-right-button" onclick="location.href='/PacienteCadastro'">
            Cadastrar Novo Paciente
        </button>
    </div>
</div>
<hr />
<div class="table-container">
    <div class="table-responsive">
        <table id="tabelaPaciente" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome Completo</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">RG Número</th>
                    <th scope="col">Contatos</th>
                    <th scope="col">Endereços</th>
                    <th scope="col">Status</th>
                    <th scope="col">Visualizar</th>
                    <th scope="col">Excluir</th>
                </tr>
            </thead>
            <tbody id="tabela">
            </tbody>
        </table>
    </div>
</div>

<table style="display:none">
    <tr id="linhaExemplo">
        <th scope="row" class="codigo"></th>
        <td class="nomeCompleto"></td>
        <td class="dataNascimento"></td>
        <td class="rgNumero"></td>
        <td class="contatos"></td>
        <td class="enderecos"></td>
        <td class="status"></td>
        <td><a href="#" class="alterar btn btn-info btn-sm">Visualizar</a></td>
        <td><a href="#" class="excluir btn btn-danger btn-sm">Excluir</a></td>
    </tr>
</table>
<div class="mt-3">
    <button type="button" class="btn btn-primary" onclick="location.href='/index'">Voltar</button>
</div>

@section Scripts
{
    <script src="~/js/Paciente.js"></script>
}
