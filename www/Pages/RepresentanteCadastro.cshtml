@page
@model www.Pages.RepresentanteCadastroModel
@{
    ViewData["Title"] = "Cadastro de Representante";
}

<form id="representanteForm" class="row g-3">

    <div class="row align-items-center">
        <div class="col-auto">
            <i class="fas fa-user fa-3x mb-3"></i>
        </div>
        <div class="col">
            <h1>Cadastro de Representante</h1>
            
        </div>
        <button type="button" class="btn btn-dark" style="width: 150px; padding: 0.25rem 0.5rem; font-size: 0.90rem;" onclick="location.href='/RepresentanteGerenciamento'">Gerenciamento de Representante</button>


    </div>
    <hr />
    <div class="col-md-2">
        <label for="txtid" class="form-label">Código</label>
        <input type="text" class="form-control" id="txtid" value="0" placeholder="Código" disabled>
    </div>

    <div class="col-md-6">
        <label for="txtnomeCompleto" class="form-label">Nome Completo</label>
        <input type="text" class="form-control" id="txtnomeCompleto" placeholder="Nome Completo" required>
        <div class="invalid-feedback">
            Por favor, insira o nome completo.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtdataNascimento" class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" id="txtdataNascimento" required>
        <div class="invalid-feedback">
            Por favor, insira a data de nascimento.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtidade" class="form-label">Idade</label>
        <input type="text" class="form-control" id="txtidade" placeholder="Idade" disabled>
    </div>

    <div class="col-md-2">
        <label for="txtrgNumero" class="form-label">RG Número</label>
        <input type="text" class="form-control" id="txtrgNumero" placeholder="RG Número" required>
        <div class="invalid-feedback">
            Por favor, insira o número do RG.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtrgDataEmissao" class="form-label">RG Data de Emissão</label>
        <input type="date" class="form-control" id="txtrgDataEmissao" required>
        <div class="invalid-feedback">
            Por favor, insira a data de emissão do RG.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtrgOrgaoExpedidor" class="form-label">RG Órgão Expedidor</label>
        <input type="text" class="form-control" id="txtrgOrgaoExpedidor" placeholder="RG Órgão Expedidor" required>
        <div class="invalid-feedback">
            Por favor, insira o órgão expedidor do RG.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtrgUfEmissao" class="form-label">RG UF de Emissão</label>
        <input type="text" class="form-control" id="txtrgUfEmissao" placeholder="RG UF de Emissão" required>
        <div class="invalid-feedback">
            Por favor, insira a UF de emissão do RG.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtcnsNumero" class="form-label">CNS Número</label>
        <input type="text" class="form-control" id="txtcnsNumero" placeholder="CNS Número" required>
        <div class="invalid-feedback">
            Por favor, insira o número do CNS.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtcpfNumero" class="form-label">CPF Número</label>
        <input type="text" class="form-control" id="txtcpfNumero" placeholder="CPF Número" required>
        <div class="invalid-feedback">
            Por favor, insira o número do CPF.
        </div>
    </div>

    <div class="col-md-2">
        <label for="txtdataCadastro" class="form-label">Data de Cadastro</label>
        <input type="date" class="form-control" id="txtdataCadastro" disabled>
    </div>

    <div class="col-md-2">
        <label for="selectStatus" class="form-label">Status</label>
        <select class="form-control" id="selectStatus" required>
            <!-- Opções serão carregadas aqui -->
        </select>
    </div>

    <h2>Contatos</h2>
    

    <div class="col-md-2">
        <label for="selectTipoContato">Tipo de Contato</label>
        <select class="form-control" id="selectTipoContato" required>
            <!-- Opções serão carregadas aqui -->
        </select>
    </div>
    <div class="col-md-3">
        <label for="txtValorContato">Valor do Contato</label>
        <input type="text" class="form-control" id="txtValorContato" placeholder="Valor do Contato" required>
    </div>

    <div class="col-12">
        <button type="button" class="btn btn-primary" id="btnAdicionarContato">Adicionar Contato</button>
    </div>
    <table class="table" id="contatoTable">
        <thead>
            <tr>
                <th scope="col">Tipo</th>
                <th scope="col">Valor</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="mensagemValidacao" style="color: red;"></div>

    

    <h2>Endereços</h2>
    

    <div class="col-md-2">
        <label for="selectTipoEndereco">Tipo de Endereço</label>
        <select class="form-control" id="selectTipoEndereco" required>
            <!-- Opções serão carregadas aqui -->
        </select>
    </div>
    <div class="col-md-6">
        <label for="txtLogradouro">Logradouro</label>
        <input type="text" class="form-control" id="txtLogradouro" placeholder="Logradouro" required>
    </div>
    <div class="col-md-2">
        <label for="txtNumero">Número</label>
        <input type="text" class="form-control" id="txtNumero" placeholder="Número" required>
    </div>
    <div class="col-md-2">
        <label for="txtComplemento">Complemento</label>
        <input type="text" class="form-control" id="txtComplemento" placeholder="Complemento">
    </div>
    <div class="col-md-4">
        <label for="txtBairro">Bairro</label>
        <input type="text" class="form-control" id="txtBairro" placeholder="Bairro" required>
    </div>
    <div class="col-md-2">
        <label for="selectEstado">Estado</label>
        <select class="form-control" id="selectEstado" required>
            <option value="">Selecione um estado</option>
        </select>
    </div>

    <div class="col-md-6">
        <label for="selectMunicipio">Município</label>
        <select class="form-control" id="selectMunicipio" required>
            <option value="">Selecione um município</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="txtCep">CEP</label>
        <input type="text" class="form-control" id="txtCep" placeholder="CEP" required>
    </div>
    <div class="col-md-6">
        <label for="txtPontoReferencia">Ponto de Referência</label>
        <input type="text" class="form-control" id="txtPontoReferencia" placeholder="Ponto de Referência">
    </div>
    <div class="col-12">
        <button type="button" class="btn btn-primary" id="btnAdicionarEndereco">Adicionar Endereço</button>
    </div>

    <table class="table" id="enderecoTable">
        <thead>
            <tr>
                <th scope="col">Tipo</th>
                <th scope="col">Logradouro</th>
                <th scope="col">Número</th>
                <th scope="col">Complemento</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">UF</th>
                <th scope="col">CEP</th>
                <th scope="col">Ponto de Referência</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="mensagemValidacaoEndereco" style="color: red;"></div>


    <div class="col-12">
        <button type="button" class="btn btn-primary" onclick="location.href='/RepresentanteGerenciamento'">Voltar</button>
        <button type="button" id="btnsalvar" class="btn btn-primary">Salvar</button>
        <button type="button" id="btnlimpar" class="btn btn-primary">Limpar</button>
    </div>

</form>

@section Scripts {
    <script src="~/js/Representante.js"></script>
}
