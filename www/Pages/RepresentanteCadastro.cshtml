@page
@model www.Pages.RepresentanteCadastroModel
@{
    ViewData["Title"] = "Cadastro de Representante";
}

<style>
    .section {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
    }

    .section-title {
        margin-bottom: 20px;
    }

    .btn-margin {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .is-invalid {
        border-color: #dc3545;
    }

        .is-invalid:focus {
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

    .invalid-feedback {
        display: none;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 80%;
        color: #dc3545;
    }

    .is-invalid + .invalid-feedback {
        display: block;
    }
</style>

<form id="representanteForm" class="row g-3">

    <div class="row align-items-center mb-3">
        <div class="col-auto">
            <i class="fas fa-user-friends fa-3x"></i>
        </div>
        <div class="col">
            <h1>Cadastro de Representante</h1>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-dark"
                    onclick="location.href='/RepresentanteGerenciamento'">
                Gerenciamento de Representantes
            </button>
        </div>
    </div>
    <hr />

    <div class="section">
        <h2 class="section-title">Informações Pessoais</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="txtid" class="form-label">Código</label>
                <input type="text" class="form-control" id="txtid" value="0" placeholder="Código" disabled>
            </div>

            <div class="col-md-2">
                <label for="txtdataCadastro" class="form-label">Data de Cadastro</label>
                <input type="date" class="form-control" id="txtdataCadastro" disabled>
            </div>

            <div class="col-md-2">
                <label for="selectStatus" class="form-label">Status</label>
                <select class="form-control" id="selectStatus" required>
                    <option value="0">Selecione um status</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um status.</div>
            </div>

            <div class="col-md-6">
                <label for="txtnomeCompleto" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="txtnomeCompleto" placeholder="Nome Completo" maxlength="100" required>
                <div class="invalid-feedback">Por favor, insira o nome completo.</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="txtdataNascimento" class="form-label">Data de Nascimento</label>
                <input type="date" class="form-control" id="txtdataNascimento" required>
                <div class="invalid-feedback">Por favor, insira a data de nascimento.</div>
            </div>

            <div class="col-md-2">
                <label for="txtidade" class="form-label">Idade</label>
                <input type="text" class="form-control" id="txtidade" placeholder="Idade" disabled>
            </div>

            <div class="col-md-2">
                <label for="selectSexo" class="form-label">Sexo</label>
                <select class="form-control" id="selectSexo" required>
                    <option value="0">Selecione um sexo</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um sexo.</div>
            </div>

            <div class="col-md-2">
                <label for="selectCorRaca" class="form-label">Cor/Raça</label>
                <select class="form-control" id="selectCorRaca" required>
                    <option value="0">Selecione uma cor/raça</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione uma cor/raça.</div>
            </div>

            <div class="col-md-2">
                <label for="selectEstadoCivil" class="form-label">Estado Civil</label>
                <select class="form-control" id="selectEstadoCivil" required>
                    <option value="0">Selecione um estado civil</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um estado civil.</div>
            </div>

            <div class="col-md-4">
                <label for="txtnomeConjuge" class="form-label">Nome do Cônjuge</label>
                <input type="text" class="form-control" id="txtnomeConjuge" placeholder="Nome do Cônjuge" maxlength="100">
                <div class="invalid-feedback">Por favor, insira o nome do cônjuge.</div>
            </div>

            <div class="col-md-2">
                <label for="selectNaturalidadeUf" class="form-label">Naturalidade - UF</label>
                <select class="form-control" id="selectNaturalidadeUf" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um estado.</div>
            </div>

            <div class="col-md-4">
                <label for="selectNaturalidadeCidade" class="form-label">Naturalidade - Cidade</label>
                <select class="form-control" id="selectNaturalidadeCidade" required>
                    <option value="0">Selecione uma cidade</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione uma cidade.</div>
            </div>

            <div class="col-md-2">
                <label for="txtrgNumero" class="form-label">RG Número</label>
                <input type="text" class="form-control" id="txtrgNumero" placeholder="RG Número" maxlength="9" required>
                <div class="invalid-feedback">Por favor, insira o número do RG.</div>
            </div>

            <div class="col-md-2">
                <label for="txtrgDataEmissao" class="form-label">RG Data de Emissão</label>
                <input type="date" class="form-control" id="txtrgDataEmissao" required>
                <div class="invalid-feedback">Por favor, insira a data de emissão do RG.</div>
            </div>

            <div class="col-md-2">
                <label for="txtrgOrgaoExpedidor" class="form-label">RG Órgão Expedidor</label>
                <input type="text" class="form-control" id="txtrgOrgaoExpedidor" placeholder="RG Órgão Expedidor" required>
                <div class="invalid-feedback">Por favor, insira o órgão expedidor do RG.</div>
            </div>

            <div class="col-md-2">
                <label for="selectRgUfEmissao" class="form-label">RG UF de Emissão</label>
                <select class="form-control" id="selectRgUfEmissao" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">Por favor, insira a UF de emissão do RG.</div>
            </div>

            <div class="col-md-2">
                <label for="txtcnsNumero" class="form-label">CNS Número</label>
                <input type="text" class="form-control numeric-only" id="txtcnsNumero" placeholder="CNS Número" maxlength="15" required>
                <div class="invalid-feedback">Por favor, insira o número do CNS.</div>
            </div>

            <div class="col-md-2">
                <label for="txtcpfNumero" class="form-label">CPF Número</label>
                <input type="text" class="form-control numeric-only" id="txtcpfNumero" placeholder="CPF Número" maxlength="11" required inputmode="numeric">
                <div class="invalid-feedback">Por favor, insira o número do CPF.</div>
            </div>

            <div class="col-md-2">
                <label for="selectProfissao" class="form-label">Profissão</label>
                <select class="form-control" id="selectProfissao" required>
                    <option value="0">Selecione uma Profissão</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione uma profissão.</div>
            </div>

            <div class="col-md-6">
                <label for="txtnomeMae" class="form-label">Nome da Mãe</label>
                <input type="text" class="form-control" id="txtnomeMae" placeholder="Nome da Mãe" maxlength="100" required>
                <div class="invalid-feedback">Por favor, insira o nome da mãe.</div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2 class="section-title">Contatos</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoContato" class="form-label">Tipo de Contato</label>
                <select class="form-control" id="selectTipoContato" required>
                    <option value="0">Selecione um tipo de contato</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um tipo de contato.</div>
            </div>

            <div class="col-md-3">
                <label for="txtValorContato" class="form-label">Valor do Contato</label>
                <input type="text" class="form-control" id="txtValorContato" placeholder="Valor do Contato" required>
                <div class="invalid-feedback">Por favor, insira o valor do contato.</div>
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarContato">Adicionar Contato</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="contatoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacao" class="text-danger"></div>
    </div>

    <div class="section">
        <h2 class="section-title">Endereços</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoEndereco" class="form-label">Tipo de Endereço</label>
                <select class="form-control" id="selectTipoEndereco" required>
                    <option value="0">Selecione um tipo de endereço</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um tipo de endereço.</div>
            </div>

            <div class="col-md-6">
                <label for="txtLogradouro" class="form-label">Logradouro</label>
                <input type="text" class="form-control" id="txtLogradouro" placeholder="Logradouro" maxlength="100" required>
                <div class="invalid-feedback">Por favor, insira o logradouro.</div>
            </div>

            <div class="col-md-2">
                <label for="txtNumero" class="form-label">Número</label>
                <input type="text" class="form-control" id="txtNumero" placeholder="Número" maxlength="10" required>
                <div class="invalid-feedback">Por favor, insira o número.</div>
            </div>

            <div class="col-md-2">
                <label for="txtComplemento" class="form-label">Complemento</label>
                <input type="text" class="form-control" id="txtComplemento" placeholder="Complemento" maxlength="30">
                <div class="invalid-feedback">Por favor, insira o complemento.</div>
            </div>

            <div class="col-md-4">
                <label for="txtBairro" class="form-label">Bairro</label>
                <input type="text" class="form-control" id="txtBairro" placeholder="Bairro" maxlength="70" required>
                <div class="invalid-feedback">Por favor, insira o bairro.</div>
            </div>

            <div class="col-md-2">
                <label for="selectEstado" class="form-label">Estado</label>
                <select class="form-control" id="selectEstado" required>
                    <option value="0">Selecione um estado</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um estado.</div>
            </div>

            <div class="col-md-6">
                <label for="selectMunicipio" class="form-label">Município</label>
                <select class="form-control" id="selectMunicipio" required>
                    <option value="0">Selecione um município</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione um município.</div>
            </div>

            <div class="col-md-2">
                <label for="txtCep" class="form-label">CEP</label>
                <input type="text" class="form-control numeric-only" id="txtCep" placeholder="CEP" maxlength="8" required>
                <div class="invalid-feedback">Por favor, insira o CEP.</div>
            </div>

            <div class="col-md-6">
                <label for="txtPontoReferencia" class="form-label">Ponto de Referência</label>
                <input type="text" class="form-control" id="txtPontoReferencia" placeholder="Ponto de Referência" maxlength="100">
                <div class="invalid-feedback">Por favor, insira o ponto de referência.</div>
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarEndereco">Adicionar Endereço</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="enderecoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Número</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">UF</th>
                        <th scope="col">CEP</th>
                        <th scope="col">Ponto de Referência</th>
                        <th scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacaoEndereco" class="text-danger"></div>
    </div>

    <div class="col-12">
        <button type="button" class="btn btn-primary" onclick="location.href='/RepresentanteGerenciamento'">Voltar</button>
        <button type="button" id="btnsalvar" class="btn btn-primary">Salvar</button>
        <button type="button" id="btnlimpar" class="btn btn-primary">Limpar</button>
    </div>

</form>

@section Scripts {
    <script src="~/js/Representante.js"></script>
}
