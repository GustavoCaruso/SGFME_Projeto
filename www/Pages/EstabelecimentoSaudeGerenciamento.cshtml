@page
@model www.Pages.EstabelecimentoSaudeGerenciamentoModel
@{
    ViewData["Title"] = "Gerenciamento de Estabelecimentos de Saúde";
}

<style>
    .top-right-button {
        position: absolute;
        top: 10px; /* ajuste a posição superior conforme necessário */
        right: 10px; /* ajuste a posição direita conforme necessário */
        width: 200px;
        padding: 0.25rem 0.5rem;
        font-size: 0.90rem;
    }

    .container {
        position: relative;
    }
</style>

<div class="container">
    <button type="button" class="btn btn-success top-right-button" onclick="location.href='/EstabelecimentoSaudeCadastro'">
        Cadastrar Novo Estabelecimento
    </button>
    <table id="tabelaEstabelecimentoSaude" class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome Fantasia</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CNES</th>
                <th scope="col">Contatos</th>
                <th scope="col">Endereços</th>
                <th scope="col">Status</th>
                <th scope="col">Visualizar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody id="tabela">
        </tbody>
    </table>
</div>

<table style="display:none">
    <tr id="linhaExemplo">
        <th scope="row" class="codigo"></th>
        <td class="nomeFantasia"></td>
        <td class="razaoSocial"></td>
        <td class="cnes"></td>
        <td class="contatos"></td>
        <td class="enderecos"></td>
        <td class="status"></td>
        <td><a href="#" class="alterar btn btn-info btn-sm">Visualizar</a></td>
        <td><a href="#" class="excluir btn btn-danger btn-sm">Excluir</a></td>
    </tr>
</table>
<div class="container">
    <button type="button" class="btn btn-primary" onclick="location.href='/index'">Voltar</button>
</div>

@section Scripts
{
    <script src="~/js/EstabelecimentoSaude.js"></script>
}
